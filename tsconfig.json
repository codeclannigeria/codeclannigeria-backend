{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~shared/*": [
        "./src/shared/*"
      ],
      "~/*": [
        "./src/*"
      ],
      "~test/*": ["./test/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}